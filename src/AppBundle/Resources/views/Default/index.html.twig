{% extends 'visitor.html.twig' %}
{% block head %} {% endblock %}
{% block title %} {% endblock %}

{% block stylesheets %}
{% stylesheets '@AppBundle/Resources/public/css/style.css' %}
<link rel="stylesheet" href="{{ asset_url }}" media="screen"/>
{% endstylesheets %}
{% endblock %}

{% block body %}
{{ wo_render_breadcrumbs() }}
<div class="row blocks">
{% for entity in entities %}

    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 block">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href = "{{path('user_calendar_show', {'slug' : entity.slug})}}">{{entity.title}}</a>
                    <span class="pull-right">
                        {% if entity.lastEventEditedAt is not empty %}
                            <small class="pull-right">Modifi√© {{ entity.lastEventEditedAt|time_diff}}</small><br>
                            {% else %}
                            <small class="pull-right">-</small><br>
                        {% endif %}
                    </span>
                </h3>
            </div>
            <div class="panel-body">
                <div class ="col-lg-4 col-xs-4">
                </div>
                <div class ="col-lg-3">
                    <a  href="{{path('user_calendar_show', {'slug' : entity.slug})}}"><img class="calendar-logo" src="{{ asset('bundles/app/image/calendar.svg')}}"></a>
                </div>
                <div class ="col-lg-5">
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
