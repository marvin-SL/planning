{% extends '::base.html.twig' %}

{% block body -%}
{% block titre %} Ajout d'un utilisateur {% endblock %}
<div class="row">
    <div class="col-md-6">
        <h1>
            Utilisateurs <br>
            <small>Cr√©er un utilisateur</small>
        </h1>
    </div>
</div>

	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-5">
                {{ form_start(form) }}
                {{ form_errors(form) }}
				<div class="form-group">
					<label for="mail">
					{{form_label(form.email)}}
					</label>
                     {{ form_errors(form.email) }}
                     {{ form_widget(form.email, { 'id': 'mail',  'attr': { 'class' : 'form-control' } } ) }}
				</div>
                <div class="form-group">
					<label for="lastname">
						{{form_label(form.lastname)}}
					</label>
                     {{ form_errors(form.lastname) }}
                     {{ form_widget(form.lastname, { 'id': 'lastname',  'attr': { 'class' : 'form-control' } } ) }}
				</div>
                <div class="form-group">
					<label for="firstname">
						{{form_label(form.firstname)}}
					</label>
                     {{ form_errors(form.firstname) }}
                     {{ form_widget(form.firstname, { 'id': 'firstname',  'attr': { 'class' : 'form-control' } } ) }}
				</div>
                    {{ form_widget(form.save, { 'attr': { 'class' : 'btn btn-success' } } ) }}
                    {{ form_end(form) }}
		</div>
		<div class="col-md-5">
		</div>
	</div>
{% endblock %}
