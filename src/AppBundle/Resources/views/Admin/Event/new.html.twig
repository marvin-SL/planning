{% extends '::base.html.twig' %}

{% block title %}
Edition
{{ parent() }}
{% endblock %}

{% block stylesheets %}
{{ form_stylesheet(form) }}
{% endblock %}

{% block titre %} Création{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Création d'un nouvel évenement
            </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
            <div>
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                <label for="start">
                    {{ form_label(form.startDate) }}
                </label>
                {{ form_errors(form.startDate) }}
                {{ form_widget(form.startDate, { 'id': 'startDate',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="end">
                    {{ form_label(form.endDate) }}
                </label>
                {{ form_errors(form.endDate) }}
                {{ form_widget(form.endDate, { 'id': 'endDate',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="calendar">
                    {{ form_label(form.calendar) }}
                </label>
                {{ form_errors(form.calendar) }}
                {{ form_widget(form.calendar, { 'id': 'calendar',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="subject">
                    {{ form_label(form.subject) }}
                </label>
                {{ form_errors(form.subject) }}
                {{ form_widget(form.subject, { 'id': 'subject',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="classroom">
                    {{ form_label(form.classroom) }}
                </label>
                {{ form_errors(form.classroom) }}
                {{ form_widget(form.classroom, { 'id': 'classroom',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="notice">
                    {{ form_label(form.notice) }}
                </label>
                {{ form_errors(form.notice) }}
                {{ form_widget(form.notice, { 'id': 'notice',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                {{ form_row(form.save, {'label': 'Mettre à jour', 'attr': { 'class' : 'btn btn-success' } } ) }}
                {{ form_end(form) }}
            </div>
            </div>
    </div>
    <div class="col-md-2">
    </div>
</div>

{% block javascripts %}
  {{ form_javascript(form) }}
<script>

$(function () {
     $('#startDate').datetimepicker({

    });
     $('#endDate').datetimepicker({
     });
     $("#startDate").on("dp.change", function (e) {
         $('#endDate').data("DateTimePicker").minDate(e.date);
     });
     $("#endDate").on("dp.change", function (e) {
         $('#startDate').data("DateTimePicker").maxDate(e.date);
     });
 });
</script>
{% endblock %}
{% endblock %}
