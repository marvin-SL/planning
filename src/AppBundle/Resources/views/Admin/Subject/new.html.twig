                {{ form_start(form) }}
                {{ form_errors(form) }}
				<div class="form-group">
					<label for="name">
						{{ form_label(form.name) }}
					</label>
                     {{ form_errors(form.name) }}
                     {{ form_widget(form.name, { 'id': 'lastname',  'attr': { 'class' : 'form-control' } } ) }}
				</div>
                <div class="form-group">
                    <label for="teachers">
                        {{ form_label(form.teachers) }}
                    </label>
                     {{ form_errors(form.teachers) }}
                     {{ form_widget(form.teachers, { 'id': 'teachers',  'attr': { 'class' : 'form-control' } } ) }}
                </div>
                <div class="form-group">
                    {{form_label(form.color)}}
                    {{ form_errors(form.color) }}
                    {{ form_widget(form.color, { 'id': 'colorPicker',  'attr': { 'class' : 'form-control' } } ) }}
                </div>
                    {{ form_widget(form.save, { 'attr': { 'class' : 'btn btn-success' } } ) }}
                    {{ form_end(form) }}
		</div>
		<div class="col-md-5">
		</div>
	</div>


