<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
            <div>
            {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}
            <div class="form-group">
                <label for="name">
                    {{form_label(edit_form.name)}}
                </label>
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, { 'id': 'name',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="teachers">
                    {{ form_label(edit_form.teachers) }}
                </label>
                 {{ form_errors(edit_form.teachers) }}
                 {{ form_widget(edit_form.teachers, { 'id': 'teachers',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                {{form_label(edit_form.color)}}
                {{ form_errors(edit_form.color) }}
                {{ form_widget(edit_form.color, { 'id': 'colorPicker',  'attr': { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.save) }}
                {{ form_widget(edit_form.save, {'label': 'button.update', 'attr': { 'class' : 'btn btn-success' } } ) }}
                {{ form_end(edit_form) }}
            </div>
            </div>
                <a class="btn btn-danger" data-toggle="modal" data-target="#modal-delete">Supprimer</a>
                {% set trans = 'text.message_alert_before_delete_subject' %}
                {% include 'AppBundle::modal-delete.html.twig' with { 'form': delete_form } %}
    </div>
    <div class="col-md-2">
    </div>
</div>

<div class="row margin-top-20">
    <div class="col-lg-12">
        <h3 class="page-header">
            Listes des matières
        </h3>
</div>
<div class="col-md-4">
</div>
<div class="col-md-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover" width="800">
            <thead>
                <tr>
                    <th>Intitulé</th>
                    <th>Editer</th>
                </tr>
            </thead>
            <tbody>
                {% for subject in subjects %}
                <tr>
                    <td>{{subject.name}}</td>
                    <td><a href="{{path('admin_subject_edit', {'id' : subject.id })}}">Editer</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

