{% extends 'base.html.twig' %}
{% block title %}
Gestion des enseignants(es)/intervenants(es)
{{ parent() }}
{% endblock %}
{% block titre %}Gestion des enseignants(es)/intervenants(es){% endblock %}
{% block body %}

<div class="row">
    <div class="col-md-12 page-header">
        <div class="col-md-10">
            <h1 class="text-left">
                Gestion des enseignant(e)s / intervenant(e)s
            </h1>
        </div>
        <div class="col-md-2">
            <a class="btn btn-lg btn-success margin-top-20" href="{{path('admin_teacher_new')}}">{{ 'text.add_entity'|trans({}, 'messages') }}</a>
        </div>
    </div>
</div>
{% if teachers is not empty %}
<div class="col-md-2">
</div>
<div class="col-md-6">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nom - pr√©nom</th>
                    <th>Editer</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>{{teacher.lastname}} {{teacher.firstname}}</td>
                    <td><a href="{{path('admin_teacher_edit', {'id' : teacher.id })}}">Editer</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="col-md-2">
</div>
{% else %}
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning">
            <h2>Il n'existe aucun enseignant.</h2>
        </div>
    </div>
</div>
{% endif %}

{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    $('.table').DataTable( {
        "scrollX": false
} );
});
</script>
{% endblock %}
