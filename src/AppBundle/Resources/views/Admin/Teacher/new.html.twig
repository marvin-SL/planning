{% endblock %}


{% block titre %} Ajout d'un(e) enseignant(e)/intervenant(e) {% endblock %}
{% block body %}

{% for flash_message in app.session.flashbag.get('notice') %}
<div class="flash-notice">
    <div class="alert alert-info">
        <h3>2) b) Ce formulaire permet de saisir le informations concernants les enseignant(e)s et intevernant(e)s.<br>
        <h4>La saisie des matières se fait à l'étape suivante</h4>
    </div>
</div>

{% endfor %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Ajout d'un(e) enseignant(e)/intervenant(e)
            </h1>
        </div>
    </div>
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-5">
                {{ form_start(form) }}
                {{ form_errors(form) }}
				<div class="form-group">
					<label for="lastname">
						Nom :
					</label>
                     {{ form_errors(form.lastname) }}
                     {{ form_widget(form.lastname, { 'id': 'lastname',  'attr': { 'class' : 'form-control' } } ) }}
				</div>
                <div class="form-group">
					<label for="firstname">
						Prenom :
					</label>
                     {{ form_errors(form.firstname) }}
                     {{ form_widget(form.firstname, { 'id': 'firstname',  'attr': { 'class' : 'form-control' } } ) }}
				</div>
                    {{ form_widget(form.save, { 'attr': { 'class' : 'btn btn-success' } } ) }}
                    {{ form_end(form) }}
		</div>
		<div class="col-md-5">
		</div>
	</div>
{% endblock %}
