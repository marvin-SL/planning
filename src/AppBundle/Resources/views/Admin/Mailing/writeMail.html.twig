{% extends '::base.html.twig' %}
{% block head %} {% endblock %}
{% block title %}
Notifier usagers
{{ parent() }}
{% endblock %}
{% block stylesheets %}
<link href="{{ asset('bundles/app/css/selectize.bootstrap3.css')}}" rel="stylesheet">
{% endblock %}

{% block titre %}Notifier usagers{% endblock %}

{% block body %}
 {{ tinymce_init() }}
<div class="row">
    <div class="col-md-12 page-header">
        <div class="col-md-10">
            <h1 class="text-left">
                Notifier usagers
            </h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form id="share" action="{{path('admin_mailing_send')}}" method="POST" class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-10">
                    <label for="recipient">Destinataire(s)</label>
                    <input type="text" value="{{list.name}}" readonly class="form-control" id="recipient" name="recipient">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <label for="cc">Copie</label>
                    <input type="text" id="cc" name="cc"  class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <label for="object">Objet</label>
                    <input id="object" type="text" class="form-control" name="object" placeholder="Objet" required="required">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <label for="comment">Message</label>
                    <textarea class="tinymce form-control" rows="5" id="comment" name="comment" required="required"></textarea>
                </div>
            </div>
            <button type="submit" name="submitButton" id="submitButton" class="btn btn-info"><i class="fa fa-envelope"></i> Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/app/js/selectize.min.js') }}"></script>
<script src="{{ asset('bundles/app/js/select.js') }}"></script>
<script>
$(function() {
    $('#submitButton').click(function(e) {
        e.preventDefault();
        if (window.confirm("Confirmer l'envoie du mail ?")) {
            $( "form:first" ).submit();
        }
    });
});

</script>
{% endblock %}
