{% extends '::base.html.twig' %}
{% block head %} {% endblock %}
{% block title %}
Liste des agendas
{{ parent() }}
{% endblock %}

{% block activeMenu1 %}
    {% set tab = "class=active" %}
    {{tab}}
{% endblock %}

{% block titre %}Liste des agendas{% endblock %}

{% block body %}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Liste des agendas
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {% if calendars is defined %}
                {% for calendar in calendars %}
                    <div class="info-icons">
                        <i class="fa fa-calendar fa-5x"></i><a href="{{path('admin_calendar_show', {'id' : calendar.id })}}">{{calendar.title}} - {{calendar.id}}</a>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning">
                    <h2>Il n'existe aucun agendas.</h2>
                </div>
            {% endif %}

        </div>

    </div>
</div>

<!-- jQuery -->
{% block javascripts %}
{% endblock %} <!--block js-->

{% endblock %}
