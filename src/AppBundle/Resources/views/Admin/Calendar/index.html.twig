{% extends '::base.html.twig' %}
{% block head %} {% endblock %}
{% block title %}
Liste des agendas
{{ parent() }}
{% endblock %}

{% block activeMenu1 %}
    {% set tab = "class=active" %}
    {{tab}}
{% endblock %}

{% block titre %}Liste des agendas{% endblock %}

{% block body %}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Liste des plannings
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {% if calendars is defined %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Libellé</th>
                                    <th>Slug</th>
                                    <th>Date création</th>
                                    <th>Date modification</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for calendar in calendars %}
                                <tr>
                                    <td>{{calendar.title}}</td>
                                    <td>{{calendar.slug}}</td>
                                    <td>{{calendar.createdAt| localizeddate('long', 'short') }}</td>
                                    <td>{{calendar.updatedAt| localizeddate('long', 'short') }}</td>
                                    <td>
                                        <a href="{{path('admin_calendar_show', {'slug' : calendar.slug })}}">Voir</a>
                                        <a href="{{path('admin_calendar_edit', {'slug' : calendar.slug })}}">Editer</a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
            {% else %}
                <div class="alert alert-warning">
                    <h2>Il n'existe aucun planning.</h2>
                </div>
            {% endif %}

        </div>

    </div>
</div>

<!-- jQuery -->
{% block javascripts %}
{% endblock %} <!--block js-->

{% endblock %}
