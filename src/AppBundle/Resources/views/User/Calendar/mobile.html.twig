{% extends 'mobile.html.twig' %}
{% block head %}
<meta  name = "viewport" content = "initial-scale = 1.0, maximum-scale = 1.0, user-scalable = no">
{% endblock %}
{% block title %} {% endblock %}

{% block stylesheets %}

{% stylesheets '@AppBundle/Resources/public/css/dhtmlx/dhxscheduler_mobile.css' %}
<link rel="stylesheet" href="{{ asset_url }}" media="screen"/>
{% endstylesheets %}


<style type="text/css" media="screen">
html, body{
    margin:0px;
    padding:0px;
    height:100%;
    overflow:hidden;
}
</style>
{% endblock %}


{% block javascripts %}
{% javascripts '@AppBundle/Resources/public/js/dhxscheduler_mobile.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}


<script type="text/javascript" charset="utf-8">
scheduler.config.readonly = true;

dhx.Date.Locale.month_full = ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"];
var labels = {
    icon_back:"Retour",
    icon_today:"Aujourd&#39;hui",
    list_tab:"Liste",
    day_tab:"Jour",
    month_tab:"Mois",
};
//
// scheduler.config.form_date = "%m-%Y-%d %h:%i %a"; //default is "%d-%m-%Y %H:%i"
// scheduler.config.header_date = "%D, %d.%m.%Y"; //default is "%d.%m.%Y"
// scheduler.config.item_date = "%d %M"; //default is "%d.%m.%Y"
// scheduler.config.calendar_date = "%M %Y"; //default is "%F %Y"
// scheduler.config.hour_date = "%h:%i %a"; //default is "%H:%i'

dhx.extend(scheduler.locale.labels,labels,true);
scheduler.xy.icon_today = 150;
scheduler.xy.list_tab = 80;
scheduler.xy.day_tab = 62;
scheduler.xy.month_tab = 80;

dhx.ready(function(){
    dhx.ui.fullScreen();
    dhx.ui({
        view: "scheduler",
        id: "scheduler"
    });
    dhx.i18n.fullDateFormat="%Y-%m-%d %H:%i";
    dhx.i18n.setLocale();

    $$("scheduler").load("/planning/data/{{entity.slug}}.xml","scheduler");
});

</script>
{% endblock %}
