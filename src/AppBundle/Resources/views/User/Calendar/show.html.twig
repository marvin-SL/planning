<script type="text/javascript">
scheduler.load("/planning/data/{{entity.slug}}.xml");
scheduler.config.xml_date = "%Y-%m-%d %H:%i";
scheduler.config.readonly = true;

scheduler.data_attributes = function(){
    return [
        ["start_date", scheduler.templates.xml_format],
        ["end_date", scheduler.templates.xml_format],
        ["subject"],
        ["classroom"],
        ["notice"],
        ["id"],
    ];
};

scheduler.config.first_hour = 8;
scheduler.config.show_loading = true;
scheduler.config.time_step = 30;

scheduler.init('scheduler_here',new Date(),"week");
scheduler.templates.event_text=function(start,end,event){
    return "Mati√®re:<b> "+event.subject+"</b><br>"+"Salle: <b>"+event.classroom+"</b><br>"+"infos: <b>"+event.notice+"</b></br>";

}

function show_minical(){
    if (scheduler.isCalendarVisible()){
        scheduler.destroyCalendar();
    } else {
        scheduler.renderCalendar({
            position:"dhx_minical_icon",
            date:scheduler._date,
            navigation:true,
            handler:function(date,calendar){
                scheduler.setCurrentView(date);
                scheduler.destroyCalendar()
            }
        });
    }
}
</script>
